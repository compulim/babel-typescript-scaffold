{
  "name": "babel-typescript-scaffold",
  "version": "1.0.0-0",
  "description": "My own scaffold for compiling TypeScript using Babel in a modern way",
  "main": "lib/index.js",
  "scripts": {
    "build": "concurrently --names \"babel,typecheck\" \"babel --extensions .js,.ts --ignore **/*.spec.js,**/*.test.js/,__test__/**/* --out-dir lib --verbose src\" \"tsc\"",
    "build:watch": "concurrently --kill-others --names \"babel,typecheck\" \"babel --extensions .js,.ts --ignore **/*.spec.js,**/*.test.js/,__test__/**/* --out-dir lib --verbose src --watch\" \"tsc --preserveWatchOutput --watch\"",
    "test": "jest",
    "typecheck": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/compulim/babel-typescript-scaffold.git"
  },
  "keywords": [
    "bot",
    "bot framework",
    "azure bot services",
    "abs",
    "local mode"
  ],
  "author": "William Wong <compulim@hotmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/compulim/babel-typescript-scaffold/issues"
  },
  "homepage": "https://github.com/compulim/babel-typescript-scaffold#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.42",
    "@babel/core": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@babel/preset-stage-3": "^7.0.0-beta.42",
    "@babel/preset-typescript": "^7.0.0-beta.42",
    "babel-jest": "^22.4.3",
    "babel-preset-stage-3": "^6.24.1",
    "concurrently": "^3.5.1",
    "gulp": "^3.9.1",
    "jest": "^22.4.3",
    "node-dev": "^3.1.3",
    "rimraf": "^2.6.2",
    "typescript": "^2.8.1"
  }
}
